<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.softmed.htmr_facility.activities.MainActivity"
    android:background="@color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <android.support.design.widget.AppBarLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HTMR"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:textSize="14sp"
                            android:id="@+id/app_name"/>

                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:background="@color/card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@color/colorPrimary"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="72dp"
                        android:layout_marginRight="72dp"
                        android:layout_marginTop="46dp"
                        android:paddingBottom="16dp"
                        android:layout_marginBottom="56dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_separator_third">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginTop="16dp"
                                    android:textColor="@color/black"
                                    android:text="@string/lab_test_form"
                                    android:textSize="42sp"
                                    android:id="@+id/heading"
                                    android:fontFamily="@font/roboto_bold"/>

                                <View
                                    android:layout_width="200dp"
                                    android:layout_height="5dp"
                                    android:id="@+id/strip_one"
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_below="@id/heading"
                                    android:background="@color/card_separator"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/strip_one"
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:textSize="24sp"
                                    android:id="@+id/client_name"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Juma Khamisi Doe"
                                    android:textColor="@color/colorPrimary"/>

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/card_separator"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/feedback_title"
                                android:layout_marginLeft="32dp"
                                android:layout_marginTop="16dp"
                                android:textSize="14sp"
                                android:textColor="@color/card_title_text"
                                android:fontFamily="@font/roboto_condensed"
                                android:text="@string/lab_test_feedback"/>

                            <View
                                android:layout_width="60dp"
                                android:layout_height="5dp"
                                android:id="@+id/strip_two"
                                android:layout_marginLeft="32dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:background="@color/card_separator"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="32dp"
                                android:id="@+id/test_type_container"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/card_title_text"
                                    android:text="@string/lab_test_type_title" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/card_light_text"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/card_title_text"
                                    android:id="@+id/lab_test_type"
                                    android:fontFamily="@font/roboto_condensed_italic"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="32dp"
                                android:layout_below="@id/hiv_status_title"
                                android:id="@+id/results_input_container">

                                <RelativeLayout
                                    android:layout_width="250dp"
                                    android:layout_height="50dp"
                                    android:id="@+id/test_results_toggle_container">

                                    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:id="@+id/test_results_toggle"
                                        android:fontFamily="@font/roboto_regular"
                                        android:gravity="center_vertical"
                                        android:layout_centerInParent="true"
                                        custom:toggleWidth="120dp"
                                        android:layout_marginRight="16dp"
                                        custom:cornerRadius="0dp"
                                        custom:textToggleLeft="@string/negative"
                                        custom:textToggleRight="@string/positive"
                                        custom:activeBgColor="@color/colorPrimary"
                                        custom:activeTextColor="@android:color/white"
                                        custom:inactiveBgColor="@color/card_separator_sec"
                                        custom:inactiveTextColor="@android:color/black"
                                        custom:separatorColor="@color/card_light_text"/>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/fake_click"/>

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:textSize="16sp"
                                    android:id="@+id/waiting_for_results"
                                    android:fontFamily="@font/roboto_condensed_italic"
                                    android:layout_toRightOf="@id/test_results_toggle_container"
                                    android:text="@string/waiting_for_results"
                                    android:textColor="@color/colorPrimary"/>


                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/card_separator_third"
                                android:paddingLeft="32dp"
                                android:paddingRight="32dp"
                                android:layout_marginTop="32dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="16dp">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/age"
                                        android:layout_marginTop="8dp"
                                        android:textSize="16sp"
                                        android:id="@+id/client_age_title"
                                        android:textColor="@color/card_grid_text"
                                        android:fontFamily="@font/roboto_bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/card_grid_text"
                                        android:layout_marginLeft="16dp"
                                        android:textSize="16sp"
                                        android:id="@+id/client_age_value"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_toRightOf="@id/client_age_title"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sex"
                                        android:layout_marginTop="8dp"
                                        android:textSize="16sp"
                                        android:layout_below="@id/client_age_title"
                                        android:id="@+id/client_gender_title"
                                        android:textColor="@color/card_grid_text"
                                        android:fontFamily="@font/roboto_bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/card_grid_text"
                                        android:layout_marginLeft="16dp"
                                        android:textSize="16sp"
                                        android:id="@+id/patient_gender_value"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_below="@id/client_age_title"
                                        android:layout_toRightOf="@+id/client_gender_title"
                                        android:text="KE"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/patient_gender_value"
                                        android:layout_marginTop="8dp"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:id="@+id/mwenyekiti_name_title"
                                        android:textColor="@color/card_grid_text"
                                        android:text="@string/veo"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/mwenyekiti_name_value"
                                        android:layout_below="@id/patient_gender_value"
                                        android:layout_marginTop="8dp"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_toRightOf="@id/mwenyekiti_name_title"
                                        android:layout_marginLeft="16dp"
                                        android:textColor="@color/card_grid_text"
                                        android:text="Mwenelukanzima Mpechu"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:paddingBottom="16dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ward"
                                        android:layout_marginTop="8dp"
                                        android:textSize="16sp"
                                        android:id="@+id/client_kata_title"
                                        android:textColor="@color/card_grid_text"
                                        android:fontFamily="@font/roboto_bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/card_grid_text"
                                        android:textSize="16sp"
                                        android:id="@+id/client_kata_value"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_toRightOf="@+id/client_kata_title"
                                        android:text="Msolwa"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/village"
                                        android:layout_below="@id/client_kata_title"
                                        android:textSize="14sp"
                                        android:layout_marginTop="8dp"
                                        android:id="@+id/client_kijiji_title"
                                        android:textColor="@color/card_grid_text"
                                        android:fontFamily="@font/roboto_bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/card_grid_text"
                                        android:layout_marginLeft="16dp"
                                        android:textSize="14sp"
                                        android:layout_marginTop="8dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:id="@+id/client_kijiji_value"
                                        android:layout_below="@id/client_kata_title"
                                        android:layout_toRightOf="@id/client_kijiji_title"
                                        android:text="Mbelwa"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:fontFamily="@font/avenir_light"
                                        android:textColor="@color/card_title_text"
                                        android:textSize="14sp"
                                        android:id="@+id/referer_name_title"
                                        android:text="Rufaa imetolewa na"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/referer_name_title"
                                        android:id="@+id/referer_name_value"
                                        android:layout_marginTop="4dp"
                                        android:visibility="gone"
                                        android:textColor="@color/card_title_text"
                                        android:fontFamily="@font/avenir_light"
                                        android:textSize="14sp"
                                        android:text="Kinjekitile Ngwale" />

                                    <TextView
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/cheo_title"
                                        android:layout_below="@id/referer_name_value"
                                        android:textSize="14sp"
                                        android:textColor="@color/card_title_text"
                                        android:text="Cheo"
                                        android:fontFamily="@font/avenir_light"
                                        android:layout_marginTop="16dp"/>

                                    <TextView
                                        android:visibility="gone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/cheo_value"
                                        android:layout_marginTop="4dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/avenir_light"
                                        android:layout_below="@id/cheo_title"
                                        android:textSize="14sp"
                                        android:text="CHW"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/map_cue"
                                        android:layout_marginTop="8dp"
                                        android:textSize="16sp"
                                        android:id="@+id/client_kitongoji_title"
                                        android:textColor="@color/card_grid_text"
                                        android:fontFamily="@font/roboto_bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/card_grid_text"
                                        android:textSize="16sp"
                                        android:id="@+id/client_map_cue"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:layout_below="@id/client_kitongoji_title"
                                        android:text="Mkesemani"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/cyan_100"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp">

                                <Button
                                    android:layout_width="200dp"
                                    android:layout_height="60dp"
                                    android:id="@+id/cancel_button"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/border_two"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_marginRight="16dp"
                                    android:layout_alignParentRight="true"
                                    android:textColor="@color/black"
                                    android:text="@string/btn_cancel"/>


                            </RelativeLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.design.widget.CoordinatorLayout>

    </ScrollView>

</RelativeLayout>