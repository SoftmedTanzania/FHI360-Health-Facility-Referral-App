<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_separator_third"
        android:orientation="horizontal"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:paddingBottom="16dp">


            <TextView
                android:id="@+id/client_age_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="@string/age"
                android:textColor="@color/card_grid_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/age_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/client_age_title"
                android:fontFamily="@font/google_sans_medium"
                android:text="27"
                android:textColor="@color/card_grid_tex"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/client_gender_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/client_age_title"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="@string/sex"
                android:textColor="@color/card_grid_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/client_age_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/client_gender_title"
                android:fontFamily="@font/google_sans_medium"
                android:text="KE"
                android:textColor="@color/card_grid_tex"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mwenyekiti_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender_text"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="@string/veo"
                android:textColor="@color/card_grid_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mwenyekiti_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender_text"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/mwenyekiti_name_title"
                android:fontFamily="@font/google_sans_medium"
                android:text="Mwenelukanzima Mpechu"
                android:textColor="@color/card_grid_tex"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/weight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mwenyekiti_name_value"
                android:fontFamily="@font/google_sans_bold"
                android:text="@string/weight"
                android:layout_marginTop="8dp"
                android:textColor="@color/card_title_text"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mwenyekiti_name_value"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/weight_title"
                android:fontFamily="@font/google_sans_bold"
                android:text="79 Kg"
                android:layout_marginTop="8dp"
                android:textColor="@color/card_grid_tex"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weight_text"
                android:fontFamily="@font/google_sans_bold"
                android:layout_marginTop="8dp"
                android:text="@string/phone_number"
                android:textColor="@color/card_title_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weight_text"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/phone_title"
                android:fontFamily="@font/google_sans_bold"
                android:text="+255 768 123 456"
                android:textColor="@color/card_grid_tex"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/client_kata_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="@string/ward"
                android:textColor="@color/card_grid_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ward_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/client_kata_title"
                android:fontFamily="@font/google_sans_medium"
                android:text="Msolwa"
                android:textColor="@color/card_grid_tex"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/client_kijiji_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/client_kata_title"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="@string/village"
                android:textColor="@color/card_grid_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/village_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/client_kata_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/client_kijiji_title"
                android:fontFamily="@font/google_sans_medium"
                android:text="Mbelwa"
                android:textColor="@color/card_grid_tex"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/referer_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_light"
                android:text="Rufaa imetolewa na"
                android:textColor="@color/card_title_text"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/referer_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/referer_name_title"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/avenir_light"
                android:text="Kinjekitile Ngwale"
                android:textColor="@color/card_title_text"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cheo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/referer_name_value"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/avenir_light"
                android:text="Cheo"
                android:textColor="@color/card_title_text"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cheo_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cheo_title"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/avenir_light"
                android:text="CHW"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/client_kitongoji_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/google_sans_bold"
                android:text="@string/map_cue"
                android:textColor="@color/card_grid_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hamlet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/client_kitongoji_title"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/google_sans_medium"
                android:text="Mkesemani"
                android:textColor="@color/card_grid_tex"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>